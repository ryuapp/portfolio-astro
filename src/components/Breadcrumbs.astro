---
export interface Breadcrumb {
  name: string;
  href: string;
}
interface Props {
  title: string;
  items: Array<Breadcrumb>;
}
const { title, items } = Astro.props;
---

<nav class="flex text-gray-400">
  <a
    class="rounded-sm transition p-2 hover:text-gray-300 hover:bg-zinc-800 -ml-2"
    href="/">Home</a
  >
  <p class="mx-1 my-2 select-none">/</p>
  {
    items.map((item) => (
      <>
        <a
          class="rounded-sm transition p-2 hover:text-gray-300 hover:bg-zinc-800"
          href={item.href}
        >
          {item.name}
        </a>
        <p class="mx-1 my-2 select-none">/</p>
      </>
    ))
  }
  <p class="p-2">{title}</p>
</nav>
