---
export interface Breadcrumb {
  name: string;
  href: string;
}
interface Props {
  title: string;
  items: Array<Breadcrumb>;
}
const { title, items } = Astro.props;
---

<div class="relative overflow-auto px-2 -ml-4">
  <nav class="flex flex-nowrap text-gray-500">
    <a
      class="rounded transition p-2 hover:text-gray-700 hover:bg-gray-200 flex-none"
      href="/">Home</a
    >
    <p class="mx-1 my-2 select-none flex-none">/</p>
    {
      items.map((item) => (
        <>
          <a
            class="rounded transition p-2 hover:text-gray-700 hover:bg-zinc-200 flex-none"
            href={item.href}
          >
            {item.name}
          </a>
          <p class="mx-1 my-2 select-none flex-none">/</p>
        </>
      ))
    }
    <p class="p-2 flex-none text-gray-700">{title}</p>
  </nav>
</div>
