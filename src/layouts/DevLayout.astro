---
import "./base.css";
import SwupScript from "../utils/swup.astro";
import LinkButton from "../components/LinkButton.astro";
import Footer from "../components/Footer.astro";

import type { MarkdownLayoutProps } from "astro";
type Props = MarkdownLayoutProps<{
  title: string;
}>;
const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{frontmatter.title}</title>
    <SwupScript />
  </head>
  <body class="text-white bg-zinc-900" ontouchstart="">
    <div id="swup" class="mx-auto max-w-5xl transition-fade">
      <main>
        <div id="markup" class="mx-5">
          <slot />
        </div>
      </main>
      <div class="mt-5 mb-10 flex justify-center">
        <LinkButton href="/" name="Home" />
      </div>
      <Footer />
    </div>
  </body>
</html>
