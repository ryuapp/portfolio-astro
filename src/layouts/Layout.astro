---
import "./base.css";
import SwupScript from "../utils/swup.astro";
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content="Ryu is a frontend developer in Japan." />
    <SwupScript />
  </head>
  <body class="text-white bg-zinc-900" ontouchstart="">
    <main id="swup" class="transition-fade">
      <slot class="transition" />
    </main>
  </body>
</html>
